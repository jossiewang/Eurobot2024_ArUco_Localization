<launch>

    <arg name="markerSize"      default="0.05"/>    <!-- in m -->
    <arg name="side"             default="left"/>
    <arg name="ref_frame"       default="world"/>  <!-- leave empty and the pose will be published wrt param parent_name -->


    <node pkg="aruco_ros" type="marker_publisher" name="aruco_marker_publisher">
        <remap from="/camera_info" to="/image_publisher_1706340461630542226/camera_info" />
        <remap from="/image" to="/image_publisher_1706340461630542226/image_raw" />
        <param name="image_is_rectified" value="True"/>
        <param name="marker_size"        value="$(arg markerSize)"/>
        <param name="reference_frame"    value="$(arg ref_frame)"/>   <!-- frame in which the marker pose will be refered -->
        <param name="camera_frame"       value="camera_link"/>
    </node>

    <node pkg="tf" type="static_transform_publisher" name="camera_link_pub" args="0 0 0 0 0 1 world camera_link 100"/>

</launch>

